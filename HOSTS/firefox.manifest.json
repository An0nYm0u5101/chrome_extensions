{ "manifest_version"        : 2
, "minimum_chrome_version"  : "28.0"
, "content_security_policy" : "script-src 'self'; object-src 'self'"

, "browser_specific_settings" : { "gecko":{ "id"                 : "hosts@eladkarako.com"
                                          , "strict_min_version" : "57.0"
                                          }
                                }

, "default_locale"          : "en_US"
, "name"                    : "__MSG_name_long__"
, "short_name"              : "__MSG_name_shrt__"
, "description"             : "__MSG_name_desc__"

, "version"                 : "2020.01.03.153540"
, "homepage_url"            : "https://github.com/eladkarako/chrome_extensions/tree/store/HOSTS"
, "author"                  : "Elad Karako"


, "permissions"             : ["*://*/*"
                              ,"webRequest"
                              ,"webRequestBlocking"
                              ]
, "background"              : { "scripts":    ["resources/background_request_manipulation.js"
                                              ]
                              }
,"web_accessible_resources" : [ "resources/*.*"]
,"icons"                    : { "128": "resources/icon.png" }
,"browser_action"           : {
                              }
}
