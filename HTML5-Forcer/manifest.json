{ "manifest_version"        : 2
, "minimum_chrome_version"  : "28.0"
, "content_security_policy" : "script-src 'self'; object-src 'self'"

, "default_locale"          : "en_US"
, "name"                    : "__MSG_name_long__"
, "short_name"              : "__MSG_name_shrt__"
, "description"             : "__MSG_name_desc__"

, "version"                 : "1.0.0.2"
, "homepage_url"            : "https://github.com/eladkarako/chrome_extensions/tree/store/HTML5-Forcer"
, "author"                  : "Elad Karako"

, "offline_enabled"         : true

, "permissions"             : [ "http://*/*"
                              , "https://*/*"
                              ]
, "content_scripts"         : [ {"js":  [ "resources/at_document_end.js"    ], "all_frames": true, "match_about_blank": true, "matches": [ "http://*/*","https://*/*" ], "run_at": "document_end"   }
                              ]
,"web_accessible_resources" : [ "resources/*.*"]
,"icons"                    : { "128": "resources/icon.png" }
,"browser_action"           : {
                              }
}
